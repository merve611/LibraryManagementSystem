@model AuthorListViewModel

@if (User.Claims.FirstOrDefault(x => x.Type == "id")?.Value != null)
{

    <div class="card">
        <div class="card-header blockquote fw-bold ">
            Yazar Detayları
        </div>
        <div class="card-body">
            <blockquote class=" mb-4 fw-bold">
                <p>Yazar İsmi : @Model.FirstName</p>
                <p>Yazar Soyismi : @Model.LastName</p>

                <p>Yazar Fotoğrafı :</p>

                <img src="@Model.ImageUrl" class="img-fluid" alt="Resim" style="width: 18rem; margin-bottom:20px;">



            </blockquote>
        </div>
    </div>

    <div style= margin-bottom:20px; >
        <a asp-action="List" asp-controller="Author" class="btn btn-outline-warning fw-bold" >
            Geri Dön
        </a>

    </div>
}